            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="8dp"
            android:text="@{data.hum}"
            app:layout_constraintStart_toEndOf="@+id/textView6"
